<view>
  <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="primary"> 扫一扫 </button>
  <view>当前设备号：</view>
  <view>{{show}}</view>
  <view>选择使用时常：</view>
  <view wx:for="{{arr}}" wx:key="index">
    <button type="default" size="mini" bindtap="setTime" data-value="{{item}}">{{item}}分钟</button>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">数字输入的input</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" type="number" bindinput="numberInput" placeholder="这是一个数字输入框" />
      </view>
    </view>
  </view>

  <button type="primary" bindtap="bindKeyInput">确定</button>


  <view>计费规则</view>

</view>