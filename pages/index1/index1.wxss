/** 修改button默认的点击态样式类**/
.index-container{
  background-color: #FBF9FE;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  font-size: 16px;
  overflow: hidden;
  height: 100%;
  width: 100%;
}

.index-body{
  position: relative;
  top: 12px;
  padding-left: 4px;
  padding-right: 4px;
  overflow: hidden;
  height: 100%;
}
.button-hover {
  background-color: red;
}
/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: blue;
}
button {margin: 10px;}

.widgets-item{
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 8px;
  margin-right: 8px;
  background-color: #FFFFFF;
  overflow: hidden;
  border-radius: 4px;
  cursor: pointer;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.widhets-title {
  margin-left: 10px;
}
.widgets-input{
  margin-right: 10px;
  overflow: hidden;
  text-align: right;
}
.time-notice-info{
  margin-left: 8px;
  margin-right: 8px;
  overflow: hidden;
  border-radius: 4px;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.time-notice-text{
  font-size: 12px;
}
.change-way{
  font-size: 12px;
  color: green;
}
.swiper{
  height: 60px;
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 8px 8px;
  border-radius: 4px;
}
.time-btn{
  width: 90px;
  height: 30px;
  line-height: 30px;
  background-color: #FBF9FE;
  color: green;
  margin: 4px 6px;
  text-align: center;
  padding: 4px 6px;
  font-weight: bold;
  border-radius: 4px;
}
.time-btn-active{
  width: 90px;
  height: 30px;
  line-height: 30px;
  background-color: green;
  color: #FBF9FE;
  margin: 4px 6px;
  text-align: center;
  padding: 4px 6px;
  font-weight: bold;
  border-radius: 4px;
}
.wrap{
  width:100%; 
  display: flex; 
  display: -webkit-box; 
  flex-direction: column;
}  
.unit-text{
  margin-right: 10px;
}
.time-input{
  margin-right: 10px;
  overflow: hidden;
  text-align: right;
  float: right;
}
.hide{
  display: none;
}
.detail-section {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 20px 0;
}
.detail-text{
  font-size: 14px;
  color: seagreen;
  margin: 2px 12px;
}
.seprate-icon{
  width: 1px;
  height: 19px;
  background-color: red;
}
.confiorm-button{
  background-color: #1AAD19;
  color: white;
}
.button-wrap{
  width: 100%;
  position: absolute;
  bottom: 20px;
}
.scan-button{
  color: #1AAD19;
  background-color: white;
  border: 1px solid #1AAD19;
}