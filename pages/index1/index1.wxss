/** 修改button默认的点击态样式类**/
.index-container{
  background-color: #FBF9FE;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  font-size: 16px;
  overflow: hidden;
}

.index-body{
  position: relative;
  top: 12px;
  padding-left: 4px;
  padding-right: 4px;
  overflow: hidden;
}
.button-hover {
  background-color: red;
}
/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: blue;
}
button {margin: 10px;}

.widgets-item{
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 8px;
  margin-right: 8px;
  background-color: #FFFFFF;
  overflow: hidden;
  border-radius: 4px;
  cursor: pointer;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.widhets-title {
  margin-left: 10px;
}
.widgets-input{
  margin-right: 10px;
  overflow: hidden;
  text-align: right;
}
.time-notice-info{
  margin-left: 8px;
  margin-right: 8px;
  overflow: hidden;
  border-radius: 4px;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.time-notice-text{
  font-size: 12px;
}
.change-way{
  font-size: 12px;
  color: green;
}
